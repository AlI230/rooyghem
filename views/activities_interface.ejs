<main class="container" id="backofficecontainer">
    <%- include('./particals/back_office.ejs') %>
    <div class="interface">
        <h2>Activiteiten</h2>
        <div class="info">
            <% activities.forEach(function(activity) { %>
                <div class="interfaceinfo">
                    <p><%= activity.title %>: 
                        <%= moment(activity.start_date).format('D/M, HH:mm') %> - <%= moment(activity.end_date).format("D/M, HH:mm") %>
                        <div class="buttons">
                            <a href="/activities/update/<%= activity.activity_id %>">bewerk</a>
                            <a href="/activities/delete/<%= activity.activity_id %>">delete</a>
                        </div>
                    </p>
                    
                </div>
            <% }) %>
        </div>
        <a class="addLink" href="/activities/create">Nieuwe activiteit</a>
    </div>
</main>