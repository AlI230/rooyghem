<main class="container">

    <%- include("./particals/back_office.ejs") %>

    <h1>Create activity</h1>

    <%if(typeof error != "undefined"){%>
        <%- include('./particals/messages.ejs') %>
    <% } %>

    <form ac action="/activities/create" method="POST">
        <input type="text" name="title" placeholder="Title...">
        <br>
        <label for="start_time">Start of activity: </label>
        <input id="start_time" type="datetime-local" name="start_date">
        <br>
        <label for="end_time">End of activity: </label>
        <input id="end_time" type="datetime-local" name="end_date">
        <br>
        <input type="text" name="meetingpoint" placeholder="Meetingpoint...">
        <br>
        <input type="text" name="description" placeholder="Description...">
        <br>
        <label for="start_publication">Start of publication: </label>
        <input id="start_publication" type="date" name="start_publication">
        <br>
        <label for="end_publication">End of publication: </label>
        <input id="end_publication" type="date" name="end_publication">
        <br>
        <select name="group_name">
            <% groups.forEach(function(group) { %>
                <option><%= group.name %></option>
            <% }) %>
        </select>
        <br>
        <input type="submit" value="Create activity">
    </form>

    <h1>All activities</h1>

    <ul>
        <% activities.forEach(function(activity){ %>
            <li><a href="/activities/update/<%= activity.activity_id %>"><%= activity.title %></a>: <%= moment(activity.start_date).format('D/M, HH:mm') %> - <%= moment(activity.end_date).format("LT") %></li>
            <form action="/activities/delete/<%= activity.activity_id %>?_method=DELETE" method="POST"><input type="submit" value="Delete"></form>
        <% }) %>
    </ul>

</main>