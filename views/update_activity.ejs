<main class="container" id="backofficecontainer">
    <%- include('./particals/back_office.ejs') %>
    <div id="backofficecreation">
        <h1>Update activiteit</h1>

        <%if(typeof error != "undefined"){%>
            <%- include('./particals/messages.ejs') %>
        <% } %>

        <form action="/activities/update/<%= activity.activity_id %>?_method=PUT" method="POST">
            <label for="title">Titel </label>
            <input id="title" type="text" name="title" value="<%= activity.title %>" placeholder="Titel...">
            <br>
            <label for="start_time">Start activiteit </label>
            <input id="start_time" type="datetime-local" name="start_date" value="<%= moment(activity.start_date).format('YYYY-MM-DDTHH:mm')%>">
            <br>
            <label for="end_time">Einde activiteit </label>
            <input id="end_time" type="datetime-local" name="end_date" value="<%= moment(activity.end_date).format('YYYY-MM-DDTHH:mm')%>">
            <br>
            <label for="meetingpoint">Plaats </label>
            <input id="meetingpoint" type="text" name="meetingpoint" value="<%= activity.meetingpoint %>" placeholder="Plaats...">
            <br>
            <label for="description">Beschrijving </label>
            <input id="description" type="text" name="description" value="<%= activity.description %>" placeholder="Beschrijving...">
            <br>
            <label for="start_publication">Start publicatie </label>
            <input id="start_publication" type="date" name="start_publication" value="<%= moment(activity.start_publication).format('YYYY-MM-DD')%>%>">
            <br>
            <label for="end_publication">Einde publicatie </label>
            <input id="end_publication" type="date" name="end_publication" value="<%= moment(activity.end_publication).format('YYYY-MM-DD')%>">
            <br>
            <label for="bannen">Ban </label>
            <select id="bannen" name="group_id">
                <option value="<%= group_id %>"><%= group_name %></option>
            </select>
            <br>
            <button type="submit">Update activiteit</button>
        </form>
    </div>

</main>